{
  "name": "nimiq-validators",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "packageManager": "pnpm@9.12.3",
  "scripts": {
    "dev:mainnet": "pnpm run dev:packages && nuxi dev --remote --dotenv .env.mainnet",
    "dev": "pnpm run dev:packages && nuxi dev --remote --dotenv .env.testnet",
    "dev:local": "pnpm run dev:packages && nuxi dev --dotenv .env.local",
    "dev:packages": "pnpm --filter=./packages/* --parallel run dev",
    "build": "nuxi build",
    "generate": "nuxi generate",
    "preview": "npx nuxthub preview",
    "postinstall": "nuxi prepare",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "db:generate": "drizzle-kit generate",
    "db:delete": "drizzle-kit drop",
    "release": "dotenv release-it"
  },
  "dependencies": {
    "@nimiq/core": "next",
    "@nuxthub/core": "^0.8.3",
    "@unovis/ts": "^1.4.4",
    "@unovis/vue": "^1.4.4",
    "@vueuse/core": "^11.1.0",
    "defu": "^6.1.4",
    "drizzle-orm": "^0.35.3",
    "identicons-esm": "^0.0.6",
    "nimiq-rpc-client-ts": "^0.4.5",
    "nimiq-supply-calculator": "workspace:*",
    "nimiq-validators-trustscore": "workspace:*",
    "nuxt": "^3.13.2",
    "pinia": "^2.2.4",
    "radix-vue": "^1.9.8",
    "svgo": "^3.3.2",
    "vue": "^3.5.12",
    "vue-router": "^4.4.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:",
    "@nuxt/eslint": "^0.6.0",
    "@nuxt/image": "^1.8.1",
    "@nuxtjs/color-mode": "^3.5.2",
    "@pinia/nuxt": "^0.5.5",
    "@types/node": "^22.9.0",
    "@unocss/eslint-config": "^0.63.6",
    "@unocss/nuxt": "^0.63.6",
    "@unocss/preset-rem-to-px": "^0.63.6",
    "@unocss/reset": "^0.63.6",
    "@vueuse/nuxt": "^11.1.0",
    "drizzle-kit": "^0.26.2",
    "drizzle-zod": "^0.5.1",
    "eslint": "catalog:",
    "eslint-plugin-format": "^0.1.2",
    "lint-staged": "catalog:",
    "nimiq-css": "^0.2.25",
    "simple-git-hooks": "catalog:",
    "typescript": "^5.6.3",
    "unocss": "^0.63.6",
    "vite-plugin-top-level-await": "^1.4.4",
    "vite-plugin-wasm": "^3.3.0",
    "wrangler": "^3.83.0"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
